{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "background": "#33658A",
          "foreground": "#ffffff",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0bc",
          "properties": {
            "time_format": "15:04"
          },
          "style": "diamond",
          "template": " \uf017 {{ .CurrentDate | date .Format }} ",
          "type": "time"
        },
        {
          "foreground": "#193549",
          "background": "#31d787",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#00D100{{end}}",
            "{{if eq \"Discharging\" .State.String}}#FFCD58{{end}}",
            "{{if eq \"Full\" .State.String}}#31d787{{end}}"
          ],
          "trailing_diamond": "\ue0b4",
          "style": "diamond",
          "template": " {{ if eq \"Charging\" .State.String }}\ueb2d{{ end }}{{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}% ",
          "type": "battery"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#105b65",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": "\uf07b ",
          "type": "text"
        },
        {
          "background": "#105b65",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": "\\",
            "home_icon": "\ueb06",
            "style": "full"
          },
          "style": "powerline",
          "template": "{{ .Path }} ",
          "type": "path"
        },

        {
          "background": "#76b367",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "#34b391",
          "background_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "foreground": "#ffffff",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "properties": {
            "always_enabled": true
          },
          "template": " {{ if gt .Code 0 }}\uf421{{ else }}\ueba2{{ end }} {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#444444",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": "<#26C6DA>\udb80\udfe9 ",
          "type": "text"
        },
        {
          "background": "#444444",
          "foreground": "#ffffff",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": " <#ffffff>\ue0a0 </>",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },

          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
          "type": "git"
        },
        {
          "background": "#444444",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "<#26C6DA>\u276f<#45F1C2>\u276f",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
